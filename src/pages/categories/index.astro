---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = await getCollection('blog');
const categories = [...new Set(posts.map(post => post.data.category))];
const categoryCount = categories.map(category => ({
  name: category,
  count: posts.filter(post => post.data.category === category).length
}));
---

<Layout title="Categories" description="Browse blog posts by category">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Categories</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {categoryCount.map(({ name, count }) => (
        <a 
          href={`/categories/${name.toLowerCase()}`}
          class="p-6 border dark:border-gray-700 rounded-lg hover:shadow-lg transition-shadow"
        >
          <h2 class="text-2xl font-bold mb-2">{name}</h2>
          <p class="text-gray-600 dark:text-gray-400">{count} post{count !== 1 ? 's' : ''}</p>
        </a>
      ))}
    </div>
  </main>
</Layout>
